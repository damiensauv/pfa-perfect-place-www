<!doctype html>
<html class="no-js" lang="{{ app.request.locale }}">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="{{ asset('public/img/favicon.ico') }}" />
    <title>{% block title %}Perfect Place{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css"
              href="{{ asset('bundles/bmatznerfoundation/css/foundation.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfoundation/css/normalize.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/common/css/base.css') }}" />
    {% endblock %}
</head>

<body>


{% include "banner.html.twig" %}


{% block body %}{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/bmatznerjquery/js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/bmatznerfoundation/js/vendor/modernizr.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/bmatznerfoundation/js/foundation.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/bmatznerfoundation/js/foundation/foundation.topbar.js') }}"></script>


    <script type="text/javascript">
        $(document).foundation();


        /* Display / hide   Parameters */
        $( document ).ready(function() {
            $('#affiche').click(function()
            {
                var clicks = $(this).data('clicks');
                if (clicks) {
                    $('#parameters').fadeIn("slow");
                    $('#map').removeClass('large-12');
                    $('#map').removeClass('medium-12');
                    $('#map').addClass('large-9');
                    $('#map').addClass('medium-9');
                    $('#affichage-icone').removeClass('red');
                    $('#affichage-icone').addClass('green');
                    $('#affichage-icone').removeClass('fa-toggle-off');
                    $('#affichage-icone').addClass('fa-toggle-on');
                    $('#affichage-icone').prop('title',  'Masquer les paramètres');
                }
                else {
                    $('#parameters').hide();
                    $('#map').removeClass('large-9');
                    $('#map').removeClass('medium-9');
                    $('#map').addClass('large-12');
                    $('#map').addClass('medium-12');
                    $('#affichage-icone').removeClass('green');
                    $('#affichage-icone').addClass('red');
                    $('#affichage-icone').removeClass('fa-toggle-on');
                    $('#affichage-icone').addClass('fa-toggle-off');
                    $('#affichage-icone').prop('title', 'Afficher les paramètres');
                }
                $(document).foundation();
                $(this).data("clicks", !clicks);
            });

            $('#affiche-nav').click(function() {
                var clicks = $(this).data('clicks');
                if (clicks) {
                    $('#parameters').fadeIn("slow");
                    $('#map').removeClass('large-12');
                    $('#map').removeClass('medium-12');
                    $('#map').addClass('large-9');
                    $('#map').addClass('medium-9');
                    $('#affichage-icone').removeClass('red');
                    $('#affichage-icone').addClass('green');
                    $('#affichage-icone').removeClass('fa-toggle-off');
                    $('#affichage-icone').addClass('fa-toggle-on');
                    $('#affichage-icone').prop('title',  'Masquer les paramètres');
                    $("a").on("mouseover",function(){
                        $("span[data-selector=" + $(this).attr('id') + "]").html('Masquer les paramètres');
                    });
                }
                else {
                    $('#parameters').hide();
                    $('#map').removeClass('large-9');
                    $('#map').removeClass('medium-9');
                    $('#map').addClass('large-12');
                    $('#map').addClass('medium-12');
                    $('#affichage-icone').removeClass('green');
                    $('#affichage-icone').addClass('red');
                    $('#affichage-icone').removeClass('fa-toggle-on');
                    $('#affichage-icone').addClass('fa-toggle-off');
                    $('#affichage-icone').prop('title', 'Afficher les paramètres');
                    $("a").on("mouseover",function(){
                        $("span[data-selector=" + $(this).attr('id') + "]").html('Afficher les paramètres');
                    });
                }

                $(this).data("clicks", !clicks);
            });


            $('#proxi').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_commerce').val(value);
            });
            $('#mobi').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_mobilite').val(value);
            });
            $('#envi').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_environement').val(value);
            });
            $('#cultu').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_culture').val(value);
            });
            $('#noctu').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_nocturne').val(value);
            });
            $('#san').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_sante').val(value);
            });
            $('#trans').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_transport').val(value);
            });
            $('#ra').on('change', function(){
                var value = $(this).attr('data-slider');
                $('#form_rayon').val(value);
            });


        });
    </script>
{% endblock %}
</body>
</html>
